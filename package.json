{
 "name": "@payfunc/service-clearhaus",
 "version": "0.0.2",
 "description": "Services for clearhaus",
 "author": "PayFunc",
 "license": "MIT",
 "repository": "https://github.com/payfunc/service-clearhaus",
 "bugs": {
  "url": "https://github.com/payfunc/service-clearhaus/issues"
 },
 "homepage": "https://payfunc.com/open-source/service-clearhaus",
 "private": false,
 "main": "dist/index.js",
 "typings": "dist/index.d.ts",
 "git": {
  "tagName": "v${version}"
 },
 "github": {
  "release": true
 },
 "jest": {
  "globals": {
   "ts-jest": {
    "tsConfig": "tsconfig.test.json"
   }
  },
  "testEnvironment": "node",
  "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
  "testPathIgnorePatterns": [
   "node_modules/",
   "dist/"
  ],
  "collectCoverageFrom": [
   "**/*.{ts,tsx,js,jsx}",
   "!**/node_modules/**",
   "!**/dist/**"
  ],
  "preset": "ts-jest",
  "testMatch": null
 },
 "scripts": {
  "dev": "watch 'npm run build' .",
  "lint": "tslint --config tslint.json --project .",
  "build": "tsc -p .",
  "test": "jest",
  "test:watch": "watch jest",
  "prepare": "npm run build",
  "clean": "rm -rf dist node_modules coverage"
 },
 "dependencies": {
  "@cardfunc/model": "0.0.69",
  "@payfunc/model": "0.1.79",
  "authly": "0.0.40",
  "gracely": "0.0.33",
  "isoly": "0.0.15",
  "form-urlencoded": "^4.2.1",
  "node-fetch": "^2.6.0"
 },
 "devDependencies": {
  "@types/jest": "^26.0.5",
  "@types/node": "^14.0.24",
  "@types/node-fetch": "^2.5.7",
  "babel-core": "^6.26.3",
  "babel-jest": "^26.1.0",
  "jest": "^26",
  "ts-jest": "^26.1.3",
  "tslint": "^6.1.2",
  "typescript": "^3.9.7",
  "watch": "^1.0.2"
 }
}

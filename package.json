{
	"name": "@payfunc/service-clearhaus",
	"version": "0.1.4",
	"description": "Services for clearhaus",
	"author": "PayFunc",
	"license": "MIT",
	"repository": "https://github.com/payfunc/service-clearhaus",
	"bugs": {
		"url": "https://github.com/payfunc/service-clearhaus/issues"
	},
	"homepage": "https://payfunc.com/open-source/service-clearhaus",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|@payfunc|gracely|isoly|servly)/.*)"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.test.json"
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"dependencies": {
		"@payfunc/model-card": "0.2.7",
		"@payfunc/model": "^0.3.1",
		"authly": "^0.2.3",
		"form-urlencoded": "^4.2.1",
		"gracely": "^0.0.39",
		"isoly": "^0.0.26",
		"node-fetch": "^2.6.1"
	},
	"devDependencies": {
		"@types/form-urlencoded": "^2.0.1",
		"@types/jest": "^26.0.0",
		"@types/node": "^14.0.24",
		"@types/node-fetch": "^2.5.7",
		"@typescript-eslint/eslint-plugin": "^3.7.1",
		"@typescript-eslint/parser": "^3.7.1",
		"babel-core": "^6.26.3",
		"babel-jest": "^26.1.0",
		"eslint": "^7.6.0",
		"eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^26",
		"prettierx": "github:simonmika/prettierx#newline-before-clause",
		"ts-jest": "^26.1.0",
		"typescript": "^3.9.7",
		"watch": "^1.0.2"
	}
}
